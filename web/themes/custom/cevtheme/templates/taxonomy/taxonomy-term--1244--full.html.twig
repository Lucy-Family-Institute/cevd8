            </div>
            <div class="timelineDS-column" style="width: 20px;">
              <div class="timelineDS-year"></div>
            </div>
          </div>
        </div>

        <div id="lineDS" class="lineDS hideDS">
          <p class="lineDS-label"></p>
        </div>
        <a href="javascript:void(0);" id="sound-controlDS">
          <span class="sound-iconDS" aria-label="Control de sonido"></span>
        </a>
        <div class="indicatorDS" aria-label="Control de progreso">
          <div class="indicator-lineDS-container">
            <span class="indicator-lineDS"></span>
          </div>
          <div class="indicator-barDS">
            <img src="/themes/custom/cevtheme/pueblos-etnicos/antecedentes-timeline/assets/progress_indicator.svg" width="216" alt="">
          </div>
        </div>
      </div>
    </div>
  </main>

    <!-- Modals -->
