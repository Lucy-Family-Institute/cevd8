{{ attach_library('cevtheme/prensa_library') }}

<header class="fixed-top purpura">
  <div class="container containerHeaderPrensa">
      <div class="row">
          <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 col-xxl-3 divPres">
              <a href="/inicio" id="linkAtras">
                <span class="icon icon-flecha-iqz"></span>
              </a>                      
              <h1>Prensa</h1>
          </div>
          <div class="col-12 col-sm-12 col-md-9 col-lg-9 col-xl-9 col-xxl-9">
            <p class="pPrensa">Lo m√°s reciente para periodistas</p>
            <div class="col-12 col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-3 col-xxl-3">
              {{ exposed }}
            </div>
          </div>
      </div>
  </div>
</header>

{% if rows %}
  <div class="container-fluid contenedorCards">
    <div class="row">
      {{ rows }}
    </div>
  </div>
{% elseif empty %}
  <div class="view-empty">
    {{ empty }}
  </div>
{% endif %}

<div class="paginador">
  {{ pager }}
</div>