    font-weight: bold;
    font-style: italic;
    text-align: center;
}


#botonesMarimbula {
    z-index: 100;
}
#botonesMarimbula .form-check-input:checked[type=radio]{
    background-image: unset;
    border-color: #fff;
   box-shadow: 0px 0px 3px 1px #fff;    
}
#botonesMarimbula .form-check-input{
    width: 1.8em;
    height: 1.8em;
    transition: all 0.7s ease;
    margin-right: 1px;
}


#contenedorCanvas{
    position: relative;
    transform: rotateX(180deg);
    height: 220px;
    width: auto;
    margin-left: auto;
    margin-right: auto;
}
#imgMarimbula {
    margin: 0px;
    padding: 0px;
}
#imgMarimbula img{
    width: auto;
    height: 250px; 
}
#tituloPista {
    text-align: center;
}
