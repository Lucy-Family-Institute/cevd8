}
.textoColor span:nth-child(3), .textoColor2 span:nth-child(3){
    color: #fff;
}
.textoColor span:nth-child(4), .textoColor2 span:nth-child(4){
    color: #fff;
}
.textoColor span:nth-child(5), .textoColor2 span:nth-child(5){
    color: #fff;
}
.textoColor span:nth-child(6),.textoColor2 span:nth-child(6){
    color: #fff;
}
.textoColor span:nth-child(7), .textoColor2 span:nth-child(7){
    color: #fff;
}
.textoColor span:nth-child(8), .textoColor2 span:nth-child(8){
    color: #fff;
}
.textoParrafo {
    color: #fff;
    padding: 1rem;
    transition: all 0.7s ease;
}
.footer{
    display: none;
}
footer {
