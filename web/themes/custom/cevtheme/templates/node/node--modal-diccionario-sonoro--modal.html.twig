        font-size: 70% !important;
        line-height: 15px !important;
    }
     .rt-player .rt-player__buttons {
        overflow-x: scroll;
    }
    [data-role="volUp"], [data-role="volDown"], [data-role="mute"] {
        display: none;
    }
   
    #ecualizadorMarimbula #imgMarimbula{
        width: auto;
        height: 200px;
        margin: 0px;
        padding: 0;
    }

    #tituloPista {
        text-align: center;
    }

    .marimbulas {
        display: flex;
        transition: all 0.7s ease;
        justify-content: center;
        flex-direction: row;
        flex-wrap: wrap;
    }
    .linkModal{
        width: 130px;
        height: auto;
    }
    .linkModal.ds img.card-img-top {
        width: 10em;
        height: 8em;
    }
    img.card-img-top {
        width: 150px;
        height: 150px;
    }
    .cbodyModal{
        position: relative;
        left: -100px;
    }
    .presentacion{
        margin-top: 70px;
        flex-direction: column;
    }
    .modal-backdrop{
        background-color:rgba(0, 0, 0, 0.212);
        width: 110vw;
    }
    #contenedorCanvas {
        width: 100%;
        height: 180px;
    }
    #botonesMarimbula .form-check-input {
        width: 1.5em;
        height: 1.5em;
    }
    #imgMarimbula img {
        height: 210px;
    }
}


</style>

