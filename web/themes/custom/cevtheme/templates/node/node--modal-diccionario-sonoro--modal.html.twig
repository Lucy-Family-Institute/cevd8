/*MEDIA QUERYS*/
@media only screen and (max-width: 768px) {
    .contenedor {
        padding: unset;
        margin: unset;
    }
    .contenedor .row {
        margin-left: auto;
        margin-right: auto;
    }
    .textoColor {
        margin-left: auto;
        margin-right: auto;
        font-size: 3rem;
    }
    .textoParrafo{
        text-align: left;
        line-height: 17px;
    }
