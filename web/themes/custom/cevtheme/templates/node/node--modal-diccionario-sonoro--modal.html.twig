<div class="arch-relacionados">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            {% if node.field_contenidos_relacionados.value %}
            <button class="nav-link active" id="related-tab-1" data-bs-toggle="tab" data-bs-target="#related-1"
                type="button" role="tab" aria-controls="related-1" aria-selected="true">
                <span class="d-flex">
                    <span class="icon icon-ico-related me-1"></span>
                    Archivos Relacionados
                </span>
            </button>
            {% endif %}
            {% if node.field_colecciones.value %}
            <button class="nav-link" id="collection-tab-1" data-bs-toggle="tab" data-bs-target="#collection-1"
                type="button" role="tab" aria-controls="collection-1" aria-selected="false">
                <span class="d-flex">
                    <span class="icon icon-ico-collections me-1"></span>
                    Colecciones
                </span>
            </button>
            {% endif %}
            {% if node.field_archivos_nativos.value %}
            <button class="nav-link" id="native-tab-1" data-bs-toggle="tab" data-bs-target="#native-1" type="button"
                role="tab" aria-controls="native-1" aria-selected="false">
                <span class="d-flex">
                    <span class="icon icon-ico-files me-1"></span>
                    Archivos Nativos
                </span>
            </button>
            {% endif %}
        </div>
    </nav>
    {% if node.field_contenidos_relacionados.value %}
    <div class="tab-content p-2" id="nav-tabContent-1">
        <div class="tab-pane fade show active" id="related-1" role="tabpanel" aria-labelledby="related-tab-1">
            {{ content.field_contenidos_relacionados}}
        </div>
        {% endif %}
        {% if node.field_colecciones.value %}
        <div class="tab-pane fade" id="collection-1" role="tabpanel" aria-labelledby="collection-tab-1">
            {{ content.field_colecciones}}
        </div>
        {% endif %}
        {% if node.field_archivos_nativos.value %}
        <div class="tab-pane fade" id="native-1" role="tabpanel" aria-labelledby="native-tab-1">
            {{ content.field_archivos_nativos}}
        </div>
        {% endif %}
    </div>
</div>
<div class="modal-keywords mb-2">
    <div>
        {{ content.field_tags }}
    </div>
</div>
